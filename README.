<body>
  <header>
    <h1>MindBridge</h1>
    <p>By SHAREA SOBUJ - Talk to your mind, heal yourself.</p>
  </header>

  <div class="container">
    <textarea id="userInput" placeholder="Write your thoughts here..."></textarea>
    <button onclick="generateResponse()">Talk to MindBridge</button>
    <div class="response" id="responseBox"></div>
  </div>

  <footer>
    &copy; 2025 SHAREA SOBUJ. All rights reserved.
  </footer>

  <script>
    const responses = [
      "You're stronger than you think. Keep going.",
      "This too shall pass. Believe in yourself.",
      "Take a deep breath. You're not alone.",
      "Your feelings are valid. Be kind to yourself.",
      "Even the darkest night will end and the sun will rise."
    ];

    function generateResponse() {
      const input = document.getElementById("userInput").value.trim();
      const responseBox = document.getElementById("responseBox");

      if (input === "") {
        responseBox.innerText = "Please share something from your heart...";
      } else {
        const index = Math.floor(Math.random() * responses.length);
        responseBox.innerText = responses[index];
      }
    }
  </script>
</body>
